<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal"    android:layout_gravity="bottom"    android:background="@android:color/transparent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_gravity="bottom"        android:weightSum="100"        android:background="#ffffff"        >        <!-- start of 코멘트 유저 프로필 사진 -->        <de.hdodenhof.circleimageview.CircleImageView            android:id="@+id/civ_recommended_item_comment_member_profile"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_weight="10"            android:src="@drawable/ic_filled_profile_back_square" />        <!-- end of 코멘트 유저 프로필 사진 -->        <EditText            android:id="@+id/et_comment"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:layout_weight="80"            android:layout_marginStart="6dp"            android:layout_marginEnd="4dp"            android:hint="@string/comment_pre_text"            android:inputType="textMultiLine|textCapSentences|textImeMultiLine"            android:background="@android:color/transparent"            android:textStyle="normal"            android:textColor="#000000"            android:maxHeight="100dp"            android:scrollbars="vertical"            android:textSize="12sp">            <requestFocus />        </EditText>        <ImageButton            android:id="@+id/btn_comment_write"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="10"            android:layout_gravity="end"            android:src="@drawable/ic_filled_comment_write"            android:backgroundTint="@color/white">        </ImageButton>    </LinearLayout></LinearLayout>
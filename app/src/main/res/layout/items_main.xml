<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_recommended_last_modified_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.03"
                    android:text="2021.01.31 14:23"
                    android:textColor="#555555"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iv_recommended_banner_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sample_guide"
                    app:layout_constraintEnd_toEndOf="@id/tv_recommended_banner_main_title"
                    app:layout_constraintStart_toStartOf="@id/tv_recommended_banner_main_title" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@id/iv_recommended_banner_url"
                    android:layout_marginTop="6dp"
                    android:alpha=".4"
                    android:background="@drawable/round_outline"
                    android:backgroundTint="#000000"
                    />

                <TextView
                    android:id="@+id/tv_recommended_banner_main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_recommended_banner_url"
                    android:layout_alignBottom="@id/iv_recommended_banner_url"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/sp"
                    android:gravity="center"
                    android:text="가장 뜨거운 종목이 온다."
                    android:textColor="#ECCA20"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_recommended_banner_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_recommended_banner_url"
                    android:layout_alignBottom="@id/iv_recommended_banner_url"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/sp"
                    android:text="여러분을 위한 최고의 추천"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_recommended_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="-0.04"
                android:text="루시드모터스 상장테마"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_recommended_banner_url" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tv_recommended_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.04"
                    android:text="좋아요"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_recommended_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.04"
                    android:text="19,114"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_like"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_recommended_dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="●"
                    android:textColor="#555555"
                    android:textSize="6sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_like_count"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_recommended_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.04"
                    android:text="조회수"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_dot1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_recommended_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.04"
                    android:text="1,211"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_recommended_dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="●"
                    android:textColor="#555555"
                    android:textSize="6sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_view_count"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_recommended_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.04"
                    android:text="댓글수"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_dot2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_recommended_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="-0.03"
                    android:text="4"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_recommended_comment"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>